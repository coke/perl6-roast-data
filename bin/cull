#!/home/coke/perl5/perlbrew/perls/perl-5.18.2/bin/perl

use Modern::Perl;
use Text::CSV;

my @types = qw/niecza rakudo.parrot rakudo.jvm rakudo.moar pugs/;
my %line;
my %pass;

my $csv = Text::CSV->new() ;

my $best = "";
my $max = 0;
foreach my $type (@types) {
    my $output = `grep '"total"' log/${type}_summary.out`;
    $output =~ s/total/$type/;
    chomp $output;
    $csv->parse($output);
    @{$line{$type}} = $csv->fields();
    $pass{$type} = 0+(split(',', $output))[1];
    if ($pass{$type} > $max) {
        $best = $type;
        $max = $pass{$type};
    }
}

my $date=`date +'%Y-%m-%d'`;
chomp $date;
my $roast_version=`(cd roast && git rev-parse --short HEAD)`;
chomp $roast_version;

foreach my $type (sort @types) {
    my $impl = shift @{$line{$type}};
    my @vals = map { s/^\s+//; $_ } @{$line{$type}};

    my $per = "";
    if ($max != 0) {
        $per = sprintf "%05.2f%%", $pass{$type}/$max*100;
    }

    splice @vals, 0, 0, $date, $per, $roast_version;
    print join(",", $impl, @vals), ",\n";
}
